<h1>Listing entries</h1>

<table>
  <thead>
    <tr>
      <th>Dataset</th>
      <th>Description</th>
      <th>Value</th>
      <th>Caption</th>
      <th>Color</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @entries.each do |entry| %>
      <tr>
        <td><%= entry.dataset_id %></td>
        <td><%= entry.description_id %></td>
        <td><%= entry.value_id %></td>
        <td><%= entry.caption %></td>
        <td><%= entry.color %></td>
        <td><%= link_to 'Show', entry %></td>
        <td><%= link_to 'Edit', edit_entry_path(entry) %></td>
        <td><%= link_to 'Destroy', entry, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

