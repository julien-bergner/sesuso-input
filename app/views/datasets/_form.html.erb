<%= simple_form_for(@dataset, html: {class: 'form-horizontal' }) do |f| %>
    <%= f.error_notification %>

    <div class="form-inputs">
      <%= f.input :caption %>
    </div>

    <%= f.fields_for :entries do |builder| %>
        <%= render 'entry_fields', f: builder, descriptions: @descriptions %>
    <% end %>

    <%= link_to_add_entries "Add Entry", f, :entries, @descriptions %>

    <div class="form-actions">
      <%= f.button :submit %>
    </div>
<% end %>
